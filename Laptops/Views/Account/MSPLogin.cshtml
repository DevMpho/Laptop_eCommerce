@{
    ViewData["Title"] = "MSP Login Selection";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/images/login2_bg.jpg');
            background-size: cover;
            background-position: center;
        }

        .backdrop {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.7);
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen">

    <div class="backdrop p-8 rounded-xl shadow-lg w-full max-w-md text-center">
        <h2 class="text-2xl font-bold text-green-700 mb-6">Welcome, @ViewBag.Email</h2>
        <p class="mb-4 text-gray-700">Choose your login type:</p>

        <form asp-action="MspLogin" method="post">
            <input type="hidden" name="email" value="@ViewBag.Email" />

            <div class="space-y-4">
                <button type="submit" name="choice" value="msp"
                        class="w-full bg-green-500 text-white py-2 rounded-lg hover:bg-green-600 transition">
                    Login as MSP Team
                </button>

                <button type="submit" name="choice" value="home"
                        class="w-full bg-gray-500 text-white py-2 rounded-lg hover:bg-gray-600 transition">
                    Login as Normal Employee
                </button>
            </div>
        </form>
    </div>

</body>
</html>
