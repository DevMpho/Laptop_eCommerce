@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Mintie Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/images/login2_bg.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .backdrop {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.6);
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen">

    <div class="backdrop p-8 rounded-xl shadow-xl w-full max-w-sm">
        <!-- Profile Icon -->
        <div class="flex justify-center mb-4">
            <div class="bg-purple-100 rounded-full p-3">
                <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M5.121 17.804A13.937 13.937 0 0112 15c2.21 0 4.292.535 6.121 1.484M15 10a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            </div>
        </div>

        <!-- App Name -->
        <h2 class="text-center text-2xl font-bold text-green-700 mb-6">Mintie</h2>

        <!-- Login Form -->
        <form asp-controller="Account" asp-action="Login" method="post">
            <!-- Email -->
            <div class="mb-4">
                <label for="email" class="block text-gray-800 font-semibold mb-1">Email:</label>
                <input type="email" id="email" name="email"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-400"
                       placeholder="name.lastname@mintgroup.net" required>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full bg-green-500 text-white py-2 rounded-lg hover:bg-green-600 transition">
                Login
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <p class="text-red-600 text-sm mt-4 text-center">@ViewBag.Error</p>
        }
    </div>

</body>
</html>
