@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Contact Us Banner</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white">
    @Html.Partial("_NavBar")

    <div class="relative bg-[#1e3f84] overflow-hidden">
        <!-- Optional Background Shapes -->
        <div class="absolute top-[-100px] left-[-100px] w-80 h-80 bg-white opacity-10 rounded-full"></div>
        <div class="absolute bottom-[-200px] right-[-200px] w-[700px] h-[700px] bg-white opacity-10 rounded-full"></div>

        <!-- Main Content -->
        <div class="relative max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-center gap-10 py-24 px-6">

            <!-- Image -->
            <div class="w-[330px] h-[330px] bg-white border-[10px] border-[#1e3f84] rounded-[60%] overflow-hidden shadow-xl">
                <img src="/images/contactUs.webp" alt="Contact" class="w-full h-full object-cover">
            </div>

            <!-- Text -->
            <div>
                <h1 class="text-white text-[40px] md:text-[50px] lg:text-[60px] font-bold text-center md:text-left leading-tight">
                    Get In Touch<br />
                    With Us
                </h1>
            </div>
        </div>
    </div>

    <div class="flex flex-col lg:flex-row justify-center items-start gap-10 px-6 py-20 max-w-7xl mx-auto">
        <!-- Left: Contact Details -->
        <div class="flex-1 space-y-10 text-[#1e3f84]">
            <h2 class="text-3xl font-bold">Contact Mint Group</h2>

            <!-- Johannesburg -->
            <div>
                <p class="font-semibold">Johannesburg</p>
                <p>T +27 (0) 11 856 4400</p>
                <p>E <a href="mailto:info@mintgroup.net" class="text-blue-600 underline">info@mintgroup.net</a></p>
                <p class="font-semibold mt-2">Physical Address</p>
                <p>1st Floor Devon House,<br>Hampton Office Park<br>20 Georgian Crescent<br>Bryanston<br>2191</p>
            </div>

            <!-- Cape Town -->
            <div>
                <p class="font-semibold">Cape Town</p>
                <p>T +27 (0) 11 856 4400</p>
                <p>E <a href="mailto:info@mintgroup.net" class="text-blue-600 underline">info@mintgroup.net</a></p>
                <p class="font-semibold mt-2">Physical Address</p>
                <p>1st Floor<br>Willowbridge Shopping Centre<br>Carl Cronje Drive<br>Tyger Valley<br>7530</p>
            </div>

            <!-- United Kingdom -->
            <div>
                <p class="font-semibold">United Kingdom</p>
                <p>E <a href="mailto:info@mintgroup.net" class="text-blue-600 underline">info@mintgroup.net</a></p>
                <p>W <a href="https://uk.mintgroup.net" class="text-blue-600 underline">uk.mintgroup.net</a></p>
            </div>
        </div>

        <!-- Right: Form -->
        <div class="flex-1 bg-[#1e3f84] p-8 rounded-lg w-full max-w-xl">
            <h3 class="text-white text-xl md:text-2xl font-semibold mb-6 text-center">
                Leave Your Details And We'll Get Back To You
            </h3>

            <form class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="text-white text-sm block mb-1">First name<span class="text-red-500">*</span></label>
                        <input type="text" class="w-full p-2 rounded bg-gray-100 border-none" />
                    </div>
                    <div>
                        <label class="text-white text-sm block mb-1">Last name<span class="text-red-500">*</span></label>
                        <input type="text" class="w-full p-2 rounded bg-gray-100 border-none" />
                    </div>
                    <div>
                        <label class="text-white text-sm block mb-1">Email<span class="text-red-500">*</span></label>
                        <input type="email" class="w-full p-2 rounded bg-gray-100 border-none" />
                    </div>
                    <div>
                        <label class="text-white text-sm block mb-1">Mobile number<span class="text-red-500">*</span></label>
                        <input type="text" class="w-full p-2 rounded bg-gray-100 border-none" />
                    </div>
                </div>

                <div>
                    <label class="text-white text-sm block mb-1">Job title</label>
                    <input type="text" class="w-full p-2 rounded bg-gray-100 border-none" />
                </div>
                <div>
                    <label class="text-white text-sm block mb-1">Department name</label>
                    <input type="text" class="w-full p-2 rounded bg-gray-100 border-none" />
                </div>
                <div>
                    <label class="text-white text-sm block mb-1">Message</label>
                    <textarea class="w-full p-2 rounded bg-gray-100 border-none" rows="4"></textarea>
                </div>
                <button type="submit" class="bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-6 rounded">
                    Submit
                </button>
            </form>
        </div>
    </div>


</body>
</html>
