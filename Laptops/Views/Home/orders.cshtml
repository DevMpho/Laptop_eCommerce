@model List<OrderViewModel>

<h2 class="text-2xl font-bold mb-4">My Orders</h2>

@foreach (var order in Model)
{
    <div class="mb-6 p-4 border rounded shadow">
        <h3 class="text-lg font-semibold">Order #@order.OrderId</h3>
        <p>Date: @order.OrderDate.ToShortDateString()</p>
        <p>Status: <strong>@order.Status</strong></p>
        <p>Total: R @order.TotalAmount</p>

        <ul class="mt-3 space-y-2">
            @foreach (var laptop in order.Laptops)
            {
                <img src="@Url.Content("~/" + @laptop.ImgUrl)" alt="@laptop.Model" class="rounded-xl w-full object-contain h-52 mb-4" />
                <li class="border-b pb-2">
                    <strong>@laptop.Brand @laptop.Model</strong> — R @laptop.Price
                    <div class="text-sm text-gray-600">Specs: @laptop.Ram RAM, @laptop.Storage Storage, @laptop.ScreenSize" screen</div>
                </li>
            }
        </ul>
    </div>
}
