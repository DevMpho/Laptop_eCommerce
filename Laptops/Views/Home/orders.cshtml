@model List<Laptops.Models.Order>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Orders</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 30px;
            background-color: #f5f5f5;
        }

        .header {
            text-align: center;
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .grid-header, .order-box {
            display: grid;
            grid-template-columns: 60px 1.8fr 1.5fr 1fr;
            align-items: center;
        }

        .grid-header {
            font-weight: bold;
            border-bottom: 2px solid #ccc;
            padding: 10px 20px;
            background-color: #fff;
        }

        .order-box {
            border: 2px solid #6db56f;
            background-color: #fff;
            margin: 10px 0;
            padding: 20px;
            border-radius: 10px;
        }

        .order-number {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
        }

        .laptop-details {
            display: flex;
            align-items: flex-start;
            gap: 15px;
        }

            .laptop-details img {
                height: 80px;
                width: auto;
                border-radius: 6px;
            }

        .laptop-details-text {
            font-size: 14px;
            color: #333;
        }

            .laptop-details-text strong {
                font-size: 16px;
            }

        .dates {
            font-size: 14px;
            color: #444;
            line-height: 1.6;
        }

        .status {
            text-align: center;
        }

            .status span {
                font-weight: bold;
                font-size: 16px;
            }

        .cancel {
            display: block;
            margin-top: 10px;
            font-size: 13px;
            color: red;
            text-decoration: none;
        }

            .cancel:hover {
                text-decoration: underline;
            }

        .total {
            font-size: 20px;
            font-weight: bold;
            margin-top: 40px;
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="header">Orders</div>

    <div class="grid-header">
        <div>#</div>
        <div>Name</div>
        <div>Dates</div>
        <div>Status</div>
    </div>

    @foreach (var order in Model)
    {
        <div class="order-box">
            <div class="order-number">@order.Id.</div>

            <div class="laptop-details">
                <img src="@order.ImageUrl" alt="Laptop Image" />
                <div class="laptop-details-text">
                    <strong>@order.LaptopName</strong><br />
                    @order.Description
                </div>
            </div>

            <div class="dates">
                <div><strong>Order:</strong> @order.OrderDate.ToString("dd/MM/yyyy")</div>
                <div><strong>Estimated Pickup:</strong> @order.EstimatedPickupDate.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="status">
                <span>@order.Status</span><br />
                <a href="#" class="cancel">cancel order</a>
            </div>
        </div>
    }

    <div class="total">Total:</div>
</body>
</html>
