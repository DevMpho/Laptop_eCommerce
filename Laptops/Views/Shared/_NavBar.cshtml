@{
    var initials = Context.Session.GetString("Initials") ?? "NA";
    var email = Context.Session.GetString("Email") ?? "Not logged in";
}

<header class="bg-blue-900 text-white px-6 py-3 flex flex-col md:flex-row md:items-center md:justify-between gap-2">
    <div class="flex items-center space-x-2">
        <a href="@Url.Action("Index", "Home")">
            <img src="/images/logo.webp" alt="mint logo" class="h-14 w-32" />
        </a>
    </div>

    <div class="flex items-center space-x-4">
        <a asp-action="ContactUs" class= "bg-green-500 px-4 py-2 rounded text-white text-sm hover:bg-green-600">Contact Us</a>
        <!-- Profile icon -->
        <div class="relative group profile-container">
            @if (initials == "NA")
            {
                <!-- Original fallback SVG icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="size-6">...</svg>
            }
            else
            {
                <div class="w-8 h-8 bg-green-600 text-white rounded-full flex items-center justify-center text-sm font-bold cursor-pointer transition-all duration-300 ease-in-out transform hover:scale-105" title="@email">
                    @initials
                </div>

                <!-- Dropdown menu -->
                <div class="absolute right-0 mt-2 hidden group-hover:block dropdown-menu bg-white dark:bg-gray-800 shadow-lg rounded-lg z-50 text-sm min-w-[150px] transition-all duration-300 ease-in-out opacity-0 group-hover:opacity-100">
                    <div class="px-4 py-2 text-gray-700 dark:text-white border-b border-gray-200 dark:border-gray-600">@email</div>
                    <a href="@Url.Action("Logout", "Account")" class="block px-4 py-2 text-red-600 hover:bg-red-100 dark:hover:bg-red-900 transition-colors duration-200">Logout</a>
                </div>
            }
        </div>

        <!-- Cart icon -->
        <a asp-action="ShoppingCart">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13l-1.293 2.293a1 1 0 00.217 1.32l.083.07a1 1 0 001.32-.217L9 14h6l1.293 2.293a1 1 0 001.32.217l.083-.07a1 1 0 00.217-1.32L17 13M7 13V6h10v7" />
            </svg>
        </a>
    </div>
</header>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const profileContainer = document.querySelector(".profile-container");
        const dropdownMenu = profileContainer.querySelector(".dropdown-menu");

        profileContainer.addEventListener("click", function () {
            dropdownMenu.classList.toggle("block");
        });

        document.addEventListener("click", function (e) {
            if (!profileContainer.contains(e.target)) {
                dropdownMenu.classList.remove("block");
            }
        });
    });
</script>
